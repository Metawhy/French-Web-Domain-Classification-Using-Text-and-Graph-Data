   ><mover
   accent="true"><mi>e</mi><mo>ˊ</mo></mover><mi>c</mi><mi>u</mi><mi>p</mi
   ><mover
   accent="true"><mi>e</mi><mo>ˊ</mo></mover><mi>r</mi><mi>a</mi><mi>b</mi
