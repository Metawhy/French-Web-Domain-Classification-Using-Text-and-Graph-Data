   setTimeout("dia8changer()",(1000*dia8secondes))};
   dia8secondes=6;
   if (dia8action == 16) dia8compteur = dia8premimage+dia8nbminis;
   if (dia8compteur > (dia8ImageMini.length)) {dia8compteur = 1};
