   timeRemaining(id_planeto) { var tps =
   parseFloat(document.getElementById('planeto_tps_'+id_planeto).value);
   var TimeConnecte =
   parseInt(document.getElementById('planeto_TimeConnecte_'+id_planeto).va
   lue); var secsSinceNewYears =
