   string(number) { var tempnum; tempnum= Math.round(number)+""; if
   (tempnum.length >3) { tempnum = tempnum.substring(0,tempnum.length-3) +
   " " + tempnum.substring(tempnum.length-3, 99); } if (tempnum.length >7)
   { tempnum = tempnum.substring(0,tempnum.length-7) + " " +
   tempnum.substring(tempnum.length-7, 99); } if (tempnum.length >11) {
   tempnum = tempnum.substring(0,tempnum.length-11) + " " +
   tempnum.substring(tempnum.length-11, 99); } switch (tempnum.length) {
   case 11 : tempnum = " " + tempnum; break; case 10 : tempnum = " " +
   tempnum; break; case 9 : tempnum = " " + tempnum; break; case 8 :
   tempnum = " " + tempnum; break; case 6 : tempnum = " " + tempnum;
